<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="135dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.yukidev.roadtriproulette.ResultActivity"
                android:background="#7f857f">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@id/linearLayout"
        android:background="#fbfcff">



        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:id="@+id/businessImageView"
            android:src="@drawable/ic_action_photo_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@id/linearLayout1"
            android:layout_toRightOf="@id/businessImageView">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business Name"
                android:maxLength="18"
                android:layout_weight="1"
                android:id="@+id/resultBusinessNameTextView"
                android:textSize="22sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/directionTextView"
                android:layout_weight="1"
                android:text="Direction"
                android:textSize="26sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/starsImageView"
                android:layout_below="@+id/resultBusinessLat"
                android:src="@drawable/fivestars"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigate"
        android:id="@+id/navigateButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linearLayout"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lat"
        android:id="@+id/resultBusinessLat"
        android:layout_below="@id/navigateButton"
        android:textSize="28sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lng"
        android:id="@+id/resultBusinessLng"
        android:layout_below="@+id/resultBusinessLat"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
